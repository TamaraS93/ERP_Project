@model EmployeeDto
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Novi zaposleni</h2>


        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Ime</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Employee_name">
                    <span asp-validation-for="Employee_name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Prezime</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Employee_surname">
                    <span asp-validation-for="Employee_surname" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Adresa</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Employee_address">
                    <span asp-validation-for="Employee_address" class="text-danger"></span>
                </div>
            </div>



            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefon</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Employee_phone">
                    <span asp-validation-for="Employee_phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Plata</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Salary">
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
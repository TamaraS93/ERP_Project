@model List<Product>
@{
}

<h2 class="text-center mb-5">Lista proizvoda</h2>

<div class="row mb-5">
    <div class="col">
        @if (User.IsInRole("admin") || User.IsInRole("zaposleni"))
        {
            <a class="btn btn-primary" asp-controller="Products" asp-action="Create">Novi proizvod</a>
        }
    </div>
</div>

<form asp-action="Index" method="get">
    <div class="row align-items-end">
        <div class="col-md-4 mb-3">
            <label class="visually-hidden" for="inlineFormSelectPref">Kategorije</label>
            <select class="form-select" id="CategoryID" name="CategoryID">
                <option selected disabled>Izaberi..</option>
                <option value="Nega kose">Nega kose</option>
                <option value="Nega tela">Nega tela</option>
                <option value="Nega lica">Nega lica</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label for="searchString" class="visually-hidden">Pronađi proizvod</label>
            <div class="input-group">
                <input type="text" class="form-control" id="searchString" name="searchString" placeholder="Pronađi proizvod">
                <button type="submit" class="btn btn-info">Search</button>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-action="Index" class="btn btn-secondary">Ukloni pretragu</a>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Kategorija</th>
            <th>Brend</th>
            <th>Cena</th>
            <th>Opis</th>
            <th>Slika</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Product_name</td>
                <td>@product.Category</td>
                <td>@product.Brand</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td><img src="/Images/@product.ImageFileName" width="100" /></td>
                <td style="white-space:nowrap">
                    @if (User.IsInRole("admin") || User.IsInRole("zaposleni"))
                    {
                        <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Products", new { Product_ID = product.Product_ID })">Izmeni</a>
                        <a class="btn btn-danger btn-sm" onclick="return confirm('Da  li ste sigurni?')" href="@Url.Action("Delete", "Products", new { Product_ID = product.Product_ID })">Obriši</a>
                    }
                    @if (User.IsInRole("kupac"))
                    {
                        <a class="btn btn-success btn-sm" href="@Url.Action("AddToCart", "Products", new { Product_ID = product.Product_ID })">Dodaj u korpu</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart-btn').click(function () {
                var productId = $(this).data('product-id');

                $.ajax({
                    url: '@Url.Action("AddToCartPost", "Products")',
                    type: 'POST',
                    data: { Product_ID: productId },
                    success: function (response) {
                        alert('Proizvod uspešno dodat u korpu!');
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = 'Error adding product to cart.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMessage += ' Product ID: ' + xhr.responseJSON.message;
                        }
                        alert(errorMessage);
                    }
                });
            });
        });
    </script>
}